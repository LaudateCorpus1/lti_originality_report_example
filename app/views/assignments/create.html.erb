<div class="row">
  <div class="col-12">
    <h3>Configure Assignment</h3>
    <p>
      <em>These settings should be saved asynchronously</em>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <form>
      <h4>Settings</h4>
      <hr />
      <div class="form-group">
        <div class="checkbox">
          <label><input id='setting_one' type="checkbox" value="">
            Setting one
          </label>
        </div>
        <div class="checkbox">
          <label><input id="setting_two" type="checkbox" value="">
            Setting two
          </label>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <h4>Debug</h4>
    <p>
      <em>The following is information about this tool launch</em>
    </p>
    <h5>Launch Parameters</h5>
    <hr />
    <% params.each do |k, v| %>
      <div class="card" style="margin-bottom: 5px;">
        <div class="card-block">
          <strong class="card-title"><%= k %></strong>
          <p class="card-text" style="word-wrap: break-word;">
            <%= v %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
